{
  "version": "1.0",
  "bayer_compliance_standard": "Bayer IT Security Standards v3.2",
  "last_updated": "2025-12-24",
  "templates": [
    {
      "id": "bayer-microservices-architecture",
      "name": "Bayer Microservices Architecture",
      "description": "Standard Bayer microservices architecture with API Gateway, service mesh, and observability",
      "category": "architecture",
      "file": "bayer-microservices-architecture.json",
      "bayer_approved": true,
      "compliance_level": "SOC2",
      "use_cases": [
        "Enterprise web applications",
        "Mobile backends",
        "Internal APIs",
        "Service-to-service communication"
      ]
    },
    {
      "id": "bayer-api-security",
      "name": "Bayer Secure API Architecture",
      "description": "Bayer-compliant REST API with authentication, authorization, and audit logging",
      "category": "api",
      "file": "bayer-api-security.json",
      "bayer_approved": true,
      "compliance_level": "SOC2",
      "use_cases": [
        "Public APIs",
        "Partner integrations",
        "Third-party access",
        "Mobile API backends"
      ]
    },
    {
      "id": "bayer-data-pipeline",
      "name": "Bayer Data Processing Pipeline",
      "description": "Secure ETL pipeline for processing sensitive data with encryption and compliance",
      "category": "data-pipeline",
      "file": "bayer-data-pipeline.json",
      "bayer_approved": true,
      "compliance_level": "GxP",
      "use_cases": [
        "Lab data processing",
        "Clinical trial data",
        "Manufacturing data",
        "Supply chain analytics"
      ]
    }
  ],
  "compliance_levels": {
    "SOC2": {
      "name": "SOC 2 Type II",
      "description": "Security, availability, processing integrity, confidentiality, privacy",
      "required_controls": [
        "Access control",
        "Encryption at rest and in transit",
        "Audit logging",
        "Change management",
        "Incident response"
      ]
    },
    "GxP": {
      "name": "Good Practice (GxP)",
      "description": "Pharmaceutical and life sciences compliance",
      "required_controls": [
        "21 CFR Part 11 compliance",
        "Electronic signatures",
        "Audit trails",
        "Data integrity (ALCOA+)",
        "10-year data retention"
      ]
    },
    "GDPR": {
      "name": "General Data Protection Regulation",
      "description": "EU data protection and privacy",
      "required_controls": [
        "Data minimization",
        "Purpose limitation",
        "Right to erasure",
        "Data portability",
        "Consent management"
      ]
    }
  },
  "bayer_security_standards": {
    "encryption": {
      "at_rest": "AES-256",
      "in_transit": "TLS 1.3",
      "key_management": "Azure Key Vault or AWS KMS"
    },
    "authentication": {
      "primary": "Azure AD B2C (Bayer SSO)",
      "protocols": ["OAuth 2.0", "SAML 2.0", "OpenID Connect"],
      "mfa": "Required for production access"
    },
    "network": {
      "vpn": "Required for internal resources",
      "private_link": "Preferred for Azure resources",
      "allowed_ips": "Bayer corporate IP ranges only"
    },
    "logging": {
      "retention": "7 years minimum",
      "siem": "Splunk or Azure Sentinel",
      "log_types": ["Access logs", "Audit logs", "Security events", "Change logs"]
    }
  }
}
