apiVersion: v1
kind: Secret
metadata:
  name: autograph-secrets
  namespace: autograph
  labels:
    app: autograph-v3
type: Opaque
stringData:
  # PostgreSQL password
  POSTGRES_PASSWORD: "changeme_autograph_postgres_password_production"
  
  # Redis password
  REDIS_PASSWORD: "changeme_autograph_redis_password_production"
  
  # MinIO credentials
  MINIO_ROOT_USER: "autograph-admin"
  MINIO_ROOT_PASSWORD: "changeme_autograph_minio_password_production"
  
  # JWT secret (generate with: openssl rand -hex 32)
  JWT_SECRET: "changeme_generate_with_openssl_rand_hex_32"
  
  # AI Provider API keys
  MGA_API_KEY: "changeme_bayer_mga_api_key"
  OPENAI_API_KEY: "changeme_openai_api_key"
  ANTHROPIC_API_KEY: "changeme_anthropic_api_key"
  GOOGLE_API_KEY: "changeme_google_api_key"
---
# Note: In production, create secrets using:
# kubectl create secret generic autograph-secrets \
#   --from-literal=POSTGRES_PASSWORD='...' \
#   --from-literal=REDIS_PASSWORD='...' \
#   --from-literal=MINIO_ROOT_USER='...' \
#   --from-literal=MINIO_ROOT_PASSWORD='...' \
#   --from-literal=JWT_SECRET='...' \
#   --from-literal=MGA_API_KEY='...' \
#   --from-literal=OPENAI_API_KEY='...' \
#   --from-literal=ANTHROPIC_API_KEY='...' \
#   --from-literal=GOOGLE_API_KEY='...' \
#   --namespace autograph
